@model List<Category>

<div class="container">
    <div class="text-center">
        <h3 class="display-4">Categorie</h3>
        <h5> <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Create">Aggiungi Categoria</a></h5>
        <div class="py-5"></div>

        @if (Model.Count() < 1)
        {
            <h4>Non ci sono categorie nel database</h4>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (Category category in Model)
                {
                    <div class="col">
                        <div class="card">
                            <div class="card-body">
                                <h2 class="card-title">
                                    <span class="badge bg-primary">@category.Name</span>
                                </h2>
                                <div>
                                    <a class="btn btn-small btn-primary" href="@Url.Action("Detail", new {id = category.Id})" class="text-end">Dettagli</a>
                                    <a class="btn btn-small btn-info" href="@Url.Action("Update", new {id = category.Id})" class="text-end">Modifica</a>
                                    <a class="btn btn-small btn-success" href="@Url.Action("CategoryFilter", "Pizza", new {id = category.Id})" class="text-end">Vedi Pizze</a>
                                    <form asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline-block">
                                        <input type="submit" class="btn btn-small btn-danger" value="Elimina">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
