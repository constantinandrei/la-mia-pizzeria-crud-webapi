@model Category

<div class="container">
    <div class="text-center">
        <h3 class="display-4">Categorie</h3>
        <h5> <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Indietro</a></h5>
        <div class="py-5"></div>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">
                            <span class="badge bg-primary">@Model.Name</span>
                        </h2>
                        <div>
                            <a class="btn btn-small btn-primary" href="@Url.Action("Detail", new {id = Model.Id})" class="text-end">Dettagli</a>
                            <a class="btn btn-small btn-info" href="@Url.Action("Update", new {id = Model.Id})" class="text-end">Modifica</a>
                            <a class="btn btn-small btn-success" href="@Url.Action("CategoryFilter", "Pizza", new {id = Model.Id})" class="text-end">Vedi Pizze</a>
                            <form asp-controller="Category" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline-block">
                                <input type="submit" class="btn btn-small btn-danger" value="Elimina">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>